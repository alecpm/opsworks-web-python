/var/log/nginx/*.log {
  <%= node['nginx_plone']['log_rotation_freq'] %>
  missingok
  rotate <%= node['nginx_plone']['log_retention_count'] %>
  compress
  delaycompress
  notifempty
  create 0640 www-data adm
  sharedscripts
  prerotate
          if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
                  run-parts /etc/logrotate.d/httpd-prerotate; \
          fi \
  endscript
  postrotate
          invoke-rc.d nginx rotate >/dev/null 2>&1
  endscript
}
